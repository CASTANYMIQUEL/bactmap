/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nf-core/bactmap -profile test,<docker/singularity>
 */

params {
    modules {
        'bcftools_filter' {
            args = "--soft-filter LowQual --exclude '%QUAL<25 || FORMAT/DP<2|| MAX(FORMAT/AD)/SUM(FORMAT/DP)<0.7 || MQ<30 || MQ0F>0.1' --output-type z"
            suffix = ".filtered"
            publish_dir   = 'variants'
        }
    }
    remove_recombination = true
}
